{% extends 'base.html.twig' %}

{% block title %}Payement index{% endblock %}

{% block body %}
    <h1>Payement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mois</th>
                <th>Montant</th>
                <th>Paye</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payement in payements %}
            <tr>
                <td>{{ payement.id }}</td>
                <td>{{ payement.mois ? payement.mois|date('Y-m') : '' }}</td>
                <td>{{ payement.montant }}</td>
                <td>{{ payement.paye }}</td>
                <td>
                    <a href="{{ path('app_payement_show', {'id': payement.id}) }}">show</a>
                    <a href="{{ path('app_payement_edit', {'id': payement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payement_new') }}">Create new</a>
{% endblock %}
