{% extends 'front.html.twig' %}

{% block title %}Maison{% endblock %}

{% block body %}
    
    
    
<section class="u-clearfix u-palette-2-base u-section-3" id="carousel_38bf">
<div class="u-clearfix u-sheet u-sheet-1">

    <center><h1> IMMOBILIERS A LOUER </h1></center>


    
    {% for maison in maisons %}
      
      
        <div class="u-border-2 u-border-grey-dark-1 u-container-style u-group u-radius-10 u-shape-round u-white u-group-1">
          <div class="u-container-layout u-container-layout-1">
            <h3 class="u-text u-text-custom-color-1 u-text-default u-text-1"> Immobilier : {{ maison.nomimmob }}</h3><br>
            <h3 class="u-text u-text-default u-text-2">locataire : {{ maison.nomLoy }}</h3><br>
            <h3 class="u-text u-text-default u-text-3">cin du locataire : {{ maison.cinLoy }}</h3><br>
            <h3 class="u-text u-text-default u-text-4">tel du locataire : {{ maison.numerotel }}</h3><br>
            <h3 class="u-text u-text-default u-text-3">prix : {{ maison.prix }} Dt /mois</h3><br>
           <h3 class="u-text u-text-default u-text-3">prochain prix  : {{ maison.prix * 1.05 }} Dt /mois</h3><br>
            <h3 class="u-text u-text-default u-text-4">début contrat :  {{ maison.deb ? maison.deb|date('Y-m-d') : '' }}  </h3><br>
            <h3 class="u-text u-text-default u-text-4">fin contrat :  {{ maison.fin ? maison.fin|date('Y-m-d') : '' }}  </h3><br>
            
            <a href="{{ path('app_maison_edit', {'id': maison.id}) }}" class="u-border-2 u-border-palette-2-base u-btn u-btn-round u-button-style u-hover-palette-2-base u-none u-radius-6 u-text-hover-white u-btn-1">modifier</a>
            {{ include('maison/_delete_form.html.twig') }}
            <a href="{{ path('app_postcom', {'id': maison.id}) }}" class="u-border-2 u-border-palette-2-base u-btn u-btn-round u-button-style u-hover-palette-2-base u-none u-radius-6 u-text-hover-white u-btn-1">consulter payement</a>
          </div>
        </div>
    
    

        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    <br><br>
<center><a href="{{ path('app_maison_new') }}" class="u-border-2 u-border-black u-border-hover-grey-25 u-btn u-btn-round u-button-style u-hover-white u-none u-radius-50 u-btn-3">nouveau immobilier</a></center>
 <br><br>
     <section class="aaaa u-clearfix u-section-1" id="carousel_87ce">
      <div class="u-clearfix u-sheet u-sheet-1">
        <div class="u-expanded-width u-list u-list-1">
          <div class="u-repeater u-repeater-1">
            <div class="u-align-center u-container-style u-list-item u-repeater-item u-white u-list-item-1">
              <div class="u-container-layout u-similar-container u-valign-middle u-container-layout-1">
              
                <h3 class="u-custom-font u-font-oswald u-text u-text-palette-2-base u-text-1" data-animation-name="counter" data-animation-event="scroll" data-animation-duration="3000">{{nbrprest}}</h3>
                <h6 class="u-custom-font u-font-oswald u-text u-text-default u-text-palette-2-base u-text-2">nbr d' immobiliers</h6>
              </div>
            </div>
            <div class="u-align-center u-container-style u-list-item u-repeater-item u-white u-list-item-2">
              <div class="u-container-layout u-similar-container u-valign-middle u-container-layout-2">
                <h3 class="u-custom-font u-font-oswald u-text u-text-palette-2-base u-text-3" data-animation-name="counter" data-animation-event="scroll" data-animation-duration="3000">{{gain -( gain * 0.15 ) }} Dt</h3>
                <h6 class="u-custom-font u-font-oswald u-text u-text-default u-text-palette-2-base u-text-4"> revenu globale net pour cette année(avec impot)</h6>
              
              <div class="u-align-center u-container-style u-list-item u-repeater-item u-white u-list-item-2">
              <div class="u-container-layout u-similar-container u-valign-middle u-container-layout-2">
                <h3 class="u-custom-font u-font-oswald u-text u-text-palette-2-base u-text-3" data-animation-name="counter" data-animation-event="scroll" data-animation-duration="3000">{{(gain * 1.05) * (1 - 0.15 )}} Dt</h3>
                <h6 class="u-custom-font u-font-oswald u-text u-text-default u-text-palette-2-base u-text-4">revenu globale net pour la prochaine année(avec impot)</h6>
              </div></div>
            </div>
          </div>
        </div>
      </div>
    </section>
{% endblock %}
