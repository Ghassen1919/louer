{% extends 'front.html.twig' %}

{% block title %}Maison{% endblock %}

{% block body %}
    
    <section class="u-clearfix u-palette-2-base u-section-3" id="carousel_38bf">
      <div class="u-clearfix u-sheet u-sheet-1">
      
        <div class="u-border-2 u-border-grey-dark-1 u-container-style u-group u-radius-10 u-shape-round u-white u-group-1">
          <div class="u-container-layout u-container-layout-1">
            <h3 class="u-text u-text-custom-color-1 u-text-default u-text-1"> Immobilier : {{ maison.nomimmob }}</h3><br>
            <h3 class="u-text u-text-default u-text-2"> nom du locataire : {{ maison.nomLoy }}</h3><br>
            <h3 class="u-text u-text-default u-text-3">cin du locataire : {{ maison.cinLoy }}</h3><br>
            <h3 class="u-text u-text-default u-text-4">tel du locataire : {{ maison.numerotel }}</h3><br>
            
            <h3 class="u-text u-text-default u-text-4">début contrat :  {{ maison.deb ? maison.deb|date('Y-m-d') : '' }}  </h3><br>
            <h3 class="u-text u-text-default u-text-4">fin contrat :  {{ maison.fin ? maison.fin|date('Y-m-d') : '' }}  </h3><br>
            
            
          </div>
        </div>
        <br><br>
        <section class="u-clearfix u-section-4" id="carousel_87ce">
      <div class="u-clearfix u-sheet u-sheet-1">
        <div class="u-expanded-width u-table u-table-responsive u-table-1">
          <table class="u-table-entity">
            <colgroup>
              <col width="25%">
              <col width="25%">
              <col width="25%">
              <col width="25%">
            </colgroup>
            <thead class="u-black u-table-header u-table-header-1">
              <tr style="height: 82px;">
                <th class="u-border-1 u-border-black u-palette-2-base u-table-cell u-table-cell-1">Mois </th>
                <th class="u-border-1 u-border-grey-90 u-palette-2-base u-table-cell u-table-cell-2">Montant </th>
                <th class="u-border-1 u-border-black u-palette-2-base u-table-cell u-table-cell-3">Payement </th>
                <th class="u-border-1 u-border-black u-palette-2-base u-table-cell u-table-cell-4">modifier </th>
                <th class="u-border-1 u-border-black u-palette-2-base u-table-cell u-table-cell-4">supprimer </th>
              </tr>
            </thead>
        
        <tbody class="u-table-body">
              
        {% for payement in payements %}
        
           <tr style="height: 50px;">
                <td class="u-border-1 u-border-grey-30 u-table-cell">{{ payement.mois ? payement.mois|date('Y-m') : '' }}</td>
                <td class="u-border-1 u-border-grey-30 u-table-cell">{{ maison.prix }} Dt</td>
                <td class="u-border-1 u-border-grey-30 u-table-cell">{{ payement.paye }}</td>
                <td class="u-border-1 u-border-grey-30 u-table-cell"><center><a href="{{ path('app_payement_edit', {'id': payement.id})}}" class="u-border-2 u-border-black u-border-hover-grey-25 u-btn u-btn-round u-button-style u-hover-white u-none u-radius-50 u-btn-3"> modifier </a></td>
                <td class="u-border-1 u-border-grey-30 u-table-cell"><center>{{ include('payement/_delete_form.html.twig') }}</td>
              </tr>
              
        {% else %}
            <tr>
            <tr style="height: 50px;">
                <td class="u-border-1 u-border-grey-30 u-table-cell">no records found</td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
   <center> <button class="u-border-2 u-border-black u-border-hover-grey-25 u-btn u-btn-round u-button-style u-hover-white u-none u-radius-50 u-btn-3"><a href="{{ path('app_postcom1', {'id': maison.id})}}">nouveau payement</a></button></center>

    <section class="aaaa u-clearfix u-section-1" id="carousel_87ce">
<center><button class="u-border-2 u-border-black u-border-hover-grey-25 u-btn u-btn-round u-button-style u-hover-white u-none u-radius-50 u-btn-3"><a href={{asset("/maison")}}>retourner</a></button></center>
    <section class="aaaa u-clearfix u-section-1" id="carousel_87ce">
      <div class="u-clearfix u-sheet u-sheet-1">
        <div class="u-expanded-width u-list u-list-1">
          <div class="u-repeater u-repeater-1">
            <div class="u-align-center u-container-style u-list-item u-repeater-item u-white u-list-item-1">
              <div class="u-container-layout u-similar-container u-valign-middle u-container-layout-1">
              
                <h3 class="u-custom-font u-font-oswald u-text u-text-palette-2-base u-text-1" data-animation-name="counter" data-animation-event="scroll" data-animation-duration="3000">{{a}} / {{ nbrprest }}</h3>
                <h6 class="u-custom-font u-font-oswald u-text u-text-default u-text-palette-2-base u-text-2">nbr de mois payés</h6>
              </div>
            </div>
            <div class="u-align-center u-container-style u-list-item u-repeater-item u-white u-list-item-2">
              <div class="u-container-layout u-similar-container u-valign-middle u-container-layout-2">
                <h3 class="u-custom-font u-font-oswald u-text u-text-palette-2-base u-text-3" data-animation-name="counter" data-animation-event="scroll" data-animation-duration="3000">{{a * maison.prix }} Dt</h3>
                <h6 class="u-custom-font u-font-oswald u-text u-text-default u-text-palette-2-base u-text-4">Montant</h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
{% endblock %}

    